<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="15dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/map_view_croatia"
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:layout_margin="10dp"
                android:background="@drawable/map_croatia"/>
            <View
                android:id="@+id/map_view_europe"
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:layout_margin="10dp"
                android:background="@drawable/map_europe"/>
            <View
                android:id="@+id/map_view_world"
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:layout_margin="10dp"
                android:background="@drawable/map_world"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </LinearLayout>


    </LinearLayout>

</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@android:color/transparent"
    android:padding="0dp"
    android:focusable="true"
    android:id="@+id/view_holder"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent">
    <Button
        android:id="@+id/view_drag_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/rootview_round_animate_button"
        android:layout_marginStart="-45dp"
        android:layout_marginTop="-50dp"
       />
    <Button
        android:id="@+id/view_resize_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/dragg_view_background"

        />


    <FrameLayout
        android:id="@+id/view_main_frame"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/view_options_holder"
        android:background="@drawable/component_background"
        >


    </FrameLayout>

    <LinearLayout
        android:id="@+id/view_options_holder"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        >

    </LinearLayout>



</RelativeLayout>